<header>
  <!-- Nav Bar (local override) -->
  <nav id="navbar" class="navbar navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %} {% if site.enable_darkmode %}navbar-dark bg-dark{% else %}navbar-light bg-light{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ '/' | relative_url }}">{{ site.title | default: site.name }}</a>
      {% elsif site.enable_navbar_social %}
        <div class="navbar-brand social">{% include social.liquid %}</div>
      {% else %}
        <a class="navbar-brand title font-weight-lighter" href="{{ '/' | relative_url }}">{{ site.title | default: site.name }}</a>
      {% endif %}

      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% assign about_title = nil %}
          {% for page_item in site.pages %}
            {% if page_item.permalink == '/' %}{% assign about_title = page_item.title %}{% endif %}
          {% endfor %}

          {% for nav_item in site.navbar-links %}
            {% for label in nav_item %}
              {% assign path = nav_item[label] %}
              {% assign is_active = false %}
              {% if page.url == path or page.url == path | relative_url or page.permalink == path %}
                {% assign is_active = true %}
              {% endif %}
              <li class="nav-item{% if is_active %} active{% endif %}">
                <a class="nav-link" href="{{ path | relative_url }}">{{ label }}{% if is_active %}
                  <span class="sr-only">(current)</span>{% endif %}</a>
              </li>
            {% endfor %}
          {% endfor %}

          {% if site.search_enabled %}
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()"><span class="nav-link">ctrl k <i class="ti ti-search"></i></span></button>
            </li>
          {% endif %}

          {% if site.enable_darkmode %}
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="ti ti-sun-moon" id="light-toggle-system"></i>
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
</header>
